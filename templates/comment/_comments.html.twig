{# templates/home/index.html.twig #}

{% extends 'base.html.twig' %}

{% block body %}
	<!-- Other sections -->

	<!-- Section des témoignages -->
		<section class="testimonials"> <h1>Ce que disent nos étudiants</h1>
		<h5>Voir ce que nos étudiants disent de nous.</p>
		<div class="test-row">
			{% for comment in comments %}
				<div class="testimonial-col">
					
					<div>
						<h3>{{ comment.user ? comment.user.name : 'Anonymous' }}</h3>
						{% for i in 1..5 %}
							<i class="fa fa-star {% if i <= comment.rating %}checked{% endif %}"></i>
						{% endfor %}
						<p>{{ comment.content }}</p>

					</div>
				</div>
			{% else %}
				<p>No testimonials available.</p>
			{% endfor %}
		</div>
	</section>
{% endblock %}
